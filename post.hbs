{{> head}}

    <main class=wrap-page>
        {{#post}}
        <article class=card>

            {{#featuredImage}}
                {{#if url}}
                <figure class=post-featured-image>
                    <amp-img
                        src="{{url}}"
                        alt="{{alt}}"
                        {{#if srcset.amp}}
                            srcset="{{srcset.amp}}"
                        {{else}}
                            {{#if srcset}}
                            srcset="{{srcset}}"
                            {{/if}}
                        {{/if}}
                        {{#if sizes.amp}}
                            sizes="{{sizes.amp}}"
                        {{else}}
                            {{#if sizes}}
                            sizes="{{sizes}}"
                            {{/if}}
                        {{/if}}
                        height="{{height}}"
                        layout="responsive"
                        width="{{width}}">
                    </amp-img>
                    {{#checkIfAny caption credits}}
                    <figcaption>
                        {{caption}} {{credits}}
                    </figcaption>
                    {{/checkIfAny}}
                    </figure>
                {{/if}}
            {{/featuredImage}}

             <div class=card-text>
                <header class=post-header>
                    <h1>
                        {{title}}
                    </h1>
                </header>

                {{{text}}}

                <div class=card-meta>
                  <div>
                    {{#author}}
                       {{#if @config.custom.authorAuthor}}
                       {{#if avatar}}
                       <a href="{{url}}" class="feed__author invert">
                         {{#avatarImage}}
                           <amp-img
                               src="{{url}}"
                               alt="{{alt}}"
                               class="card-meta-author"
                               height="{{height}}"
                               layout="responsive"
                               width="{{width}}">
                           </amp-img>
                         {{/avatarImage}}
                       </a>
                       {{/if}}
                       {{/if}}
                    {{/author}}
                  {{#if tags}}
                   {{#each tags}}
                     <a class=btn href="{{url}}">{{name}}</a>
                   {{/each}}
                  {{/if}}
                  </div>
                  <div class=time-author>
                    {{#author}}
                    <a href="{{url}}">{{name}}</a>
                    {{/author}}
                  <time datetime="{{date modifiedAt 'YYYY-MM-DDTHH:mm'}}">
                        {{#checkIf @config.custom.formatDate '!=' 'custom'}}
                           {{date modifiedAt @config.custom.formatDate}}
                        {{else}}
                           {{date modifiedAt @config.custom.formatDateCustom}}
                        {{/checkIf}}
                  </time>
                </div>
               </div>
            </div>
        </article>

        {{/post}}
        {{#if @config.post.displayPostNavigation}}
            <nav class="post-pagination wrap-inner">
                {{#previousPost}}
                    <div class=post-pagination-prev>
                        <span>قبلی</span>
                        <a href="{{url}}">{{title}}</a>
                    </div>
                {{/previousPost}}

                {{#nextPost}}
                    <div class=post-pagination-next>
                        <span>بعدی</span>
                        <a href="{{url}}">{{title}}</a>
                    </div>
                {{/nextPost}}
            </nav>
         {{/if}}


    </main>
{{> footer}}
